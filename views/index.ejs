<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <meta name="format-detection" content="telephone=no">
    <meta name="color-scheme" content="light dark">
    <title>Tinder Mini App</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div id="card-container">
        <% if (user) { %>
            <div class="card">
                <img src="<%= user.photo %>" alt="<%= user.name %>">
                <h2><%= user.name %></h2>
            </div>
        <% } else { %>
            <p>No more users</p>
        <% } %>
    </div>

    <div id="controls">
        <button id="dislike">Dislike</button>
        <button id="like">Like</button>
    </div>

    <!-- Подключение Telegram Web App -->
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
    <script>
        if (window.Telegram && window.Telegram.WebApp) {
            const tg = window.Telegram.WebApp;
            tg.expand(); // Развернуть приложение на весь экран
            tg.ready(); // Обязательная строка для инициализации
        } else {
            alert('This is not a Telegram Mini App environment!');
        }

        // Логика для загрузки следующего пользователя
        async function loadNextUser() {
            try {
                const response = await fetch('/next-user', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                });
                const nextUser = await response.json();

                if (nextUser) {
                    document.getElementById('card-container').innerHTML = `
                        <div class="card">
                            <img src="${nextUser.photo}" alt="${nextUser.name}">
                            <h2>${nextUser.name}</h2>
                        </div>
                    `;
                } else {
                    document.getElementById('card-container').innerHTML = '<p>No more users</p>';
                }
            } catch (error) {
                console.error('Error loading next user:', error);
            }
        }

        // Обработчики кнопок
        document.getElementById('dislike').addEventListener('click', loadNextUser);
        document.getElementById('like').addEventListener('click', loadNextUser);
    </script>
</body>
</html>